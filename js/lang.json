document.addEventListener("DOMContentLoaded", () => {
    let language = localStorage.getItem("lang") || "en"; // Default language: English
    setLanguage(language);
});

function setLanguage(lang) {
    localStorage.setItem("lang", lang);

    fetch("lang.json")
        .then(response => response.json())
        .then(data => {
            document.getElementById("welcome-text").innerText = data[lang].welcome;
            document.getElementById("office-place").innerText = data[lang].location;
            document.getElementById("explore-text").innerText = data[lang].explore;
            document.getElementById("contact-text").innerText = data[lang].contact;
        })
        .catch(error => console.error("Error loading language file:", error));
}
